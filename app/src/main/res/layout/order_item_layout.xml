<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_brand"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    android:background="@drawable/default_item_background"
    app:strokeWidth="1dp"
    android:elevation="0dp"
    app:cardElevation="0dp"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="5dp"

        >

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_brand"
            android:focusable="false"
            android:clickable="false"
            >

            <ImageView
                android:id="@+id/orderImgae"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/adidas" />


        </RelativeLayout>

        <TextView
            android:id="@+id/order_item_nagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_in_order_name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:ellipsize="end"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>