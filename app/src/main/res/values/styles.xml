<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>



    <style name="head1">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>
    <style name="head2">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>
    <style name="head2black">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>
    <style name="secondryTextLight">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>
    <style name="secondryTextDark">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/secondrey_text_color_dark</item>
        <item name="android:fontFamily">@font/inter</item>

    </style>
    <style name="forgot_pass">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#EA4335</item>
    </style>
    <style name="by_connecti">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#8F959E</item>
    </style>
    <style name="men_s_print">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#8F959E</item>
    </style>

    <style name="men_s_tie_d">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#1D1E20</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="SearchBarStyle" >
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:queryHint">Search...</item>
    </style>

    <!-- Style for the Pending button -->
    <style name="CustomPendingButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@android:color/holo_red_dark</item>
        <item name="strokeWidth">2dp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#BA0000</item>
    </style>

    <!-- Style for the On Delivery button -->
    <style name="CustomOnDeliveryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@android:color/holo_green_dark</item>
        <item name="textColor">@android:color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00B507</item>
    </style>

</resources>